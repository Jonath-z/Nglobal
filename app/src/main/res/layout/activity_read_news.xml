<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent">

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/read_article_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title Of the article here"
        android:scaleType="centerCrop"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="44sp"
        android:paddingBottom="10dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="284dp" />

    <ImageView
        android:id="@+id/read_article_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="TextView"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/welcome_prof"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         >
          <TextView
         android:id="@+id/read_article_author_view"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Author Jonathan Z."
         android:textSize="16sp"
         android:textColor="@color/black"
         android:scaleType="centerCrop"
         tools:layout_editor_absoluteX="24dp"
         tools:layout_editor_absoluteY="284dp" />
     </LinearLayout>

     <TextView
         android:id="@+id/read_article_content_view"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Author Jona"
         android:textSize="20sp"
         android:lineHeight="26dp"
         android:layout_marginVertical="20dp"
         android:textColor="@color/black"
         android:scaleType="centerCrop"
         tools:layout_editor_absoluteX="24dp"
         tools:layout_editor_absoluteY="284dp" />
 </LinearLayout>
</ScrollView>